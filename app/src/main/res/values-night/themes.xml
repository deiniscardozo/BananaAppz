<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BananaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_palette</item>
        <item name="colorPrimaryDark">@color/green_palette</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/white</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textAppearanceListItem">@color/white</item>
        <item name="android:itemTextAppearance">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textStyle">bold</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style parent="TextAppearance.Design.Tab" name="TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.BananaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.BananaApp">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Theme.BananaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BananaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>