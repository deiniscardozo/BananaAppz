<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/GreenFond"
    app:cardCornerRadius="25dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recycler_ic">

        <FrameLayout
            android:id="@+id/ivAvatarLoading"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/Shade"
            android:background="@drawable/bg_circular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <FrameLayout
            android:id="@+id/tvThirdsNameLoading"
            android:layout_width="293dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/Shade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarLoading"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvThirdsCifLoading"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/Shade"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarLoading"
            app:layout_constraintTop_toBottomOf="@+id/tvThirdsNameLoading" />

        <TextView
            android:id="@+id/tvThirdsBalance"
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/Shade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.839"
            app:layout_constraintStart_toEndOf="@+id/tvThirdsCifLoading"
            app:layout_constraintTop_toBottomOf="@+id/tvThirdsNameLoading" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
